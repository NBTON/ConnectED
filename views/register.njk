{% extends "layout.njk" %}
{% block content %}
<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-semibold">Create your account</h1>
  <form action="/register" method="POST" class="mt-6 space-y-4">
    <div>
      <label for="email" class="label">Email</label>
      <input id="email" name="email" type="email" required class="input mt-1" placeholder="Enter your email" />
      {% if flash and flash.errors and flash.errors.email %}
        <p class="error-text">{{ flash.errors.email }}</p>
      {% endif %}
    </div>
    <div>
      <label for="username" class="label">Username</label>
      <input id="username" name="username" type="text" required class="input mt-1" placeholder="Choose a username" />
      {% if flash and flash.errors and flash.errors.username %}
        <p class="error-text">{{ flash.errors.username }}</p>
      {% endif %}
    </div>
    <div>
      <label for="password" class="label">Password</label>
      <input id="password" name="password" type="password" minlength="6" required class="input mt-1" placeholder="Create a password" />
      <p class="help-text">At least 6 characters.</p>
      {% if flash and flash.errors and flash.errors.password %}
        <p class="error-text">{{ flash.errors.password }}</p>
      {% endif %}
    </div>
    <div>
      <label for="confirmPassword" class="label">Confirm password</label>
      <input id="confirmPassword" name="confirmPassword" type="password" minlength="6" required class="input mt-1" placeholder="Re-enter your password" />
      {% if flash and flash.errors and flash.errors.confirmPassword %}
        <p class="error-text">{{ flash.errors.confirmPassword }}</p>
      {% endif %}
    </div>
    <button type="submit" class="w-full btn-primary">Create account</button>
    <p class="text-sm text-gray-600 text-center">Already have an account? <a href="/login" class="text-primary hover:underline">Sign in</a></p>
  </form>
</div>
{% endblock %}

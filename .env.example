# =============================================================================
# ConnectED Environment Configuration
# =============================================================================
# Copy this file to .env and configure values for your environment

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/conect-ed

# Database connection settings
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=5000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Session secret (REQUIRED: Generate a secure random string for production)
# Minimum 32 characters recommended
SESSION_SECRET=change_me_for_prod_use_secure_random_string

# CORS allowed origins (comma-separated)
# Production example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=*

# Rate limiting configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW=300000
LOGIN_RATE_LIMIT_MAX=5

# Session configuration
SESSION_COOKIE_MAX_AGE=604800000
SESSION_ROLLING=true

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size in bytes (2MB default)
MAX_FILE_SIZE=2097152

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# -----------------------------------------------------------------------------
# Performance & Caching
# -----------------------------------------------------------------------------
# Static asset cache duration
STATIC_MAX_AGE=7d

# Redis URL (optional - if not provided, MongoDB session store will be used)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# -----------------------------------------------------------------------------
# Email Configuration (for future features)
# -----------------------------------------------------------------------------
# SMTP configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# -----------------------------------------------------------------------------
# Production Environment Variables
# -----------------------------------------------------------------------------
# For production deployment, ensure these are set:
#
# NODE_ENV=production
# SESSION_SECRET=<secure-random-32-char-string>
# MONGODB_URI=<production-mongodb-connection-string>
# CORS_ORIGIN=<your-production-domain>
# REDIS_URL=<production-redis-url>
#
# Example production setup:
# SESSION_SECRET=sk_2c26b46b68ffc68ff99b453c1d304765134134220923536
# CORS_ORIGIN=https://connected.yourdomain.com
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/conect-ed